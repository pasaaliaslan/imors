{
    "name": "Imors",
    "dockerFile": "../Dockerfile",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.black-formatter",
                "ms-python.flake8",
                "ms-python.isort"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "editor.defaultFormatter": "ms-python.black-formatter",
                "editor.codeActionsOnSave": {
                    "source.organizeImports": "always"
                }
            }
        }
    }
}